    end
    
    subgraph "Cross-Service Tenant Authorization"
        CONV_AUTHZ -.-> PLATFORM_AUTHZ
        WF_AUTHZ -.-> PLATFORM_AUTHZ
        AGENT_AUTHZ -.-> PLATFORM_AUTHZ
    end
    
