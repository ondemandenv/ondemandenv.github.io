        CONV_API --> CONV_AUTHZ
        CONV_AUTHZ --> CONV_QUERY
        CONV_AUTHZ --> CONV_CMD
        CONV_QUERY --> CONV_DATA
        CONV_CMD --> CONV_DATA
        CONV_QUERY --> CONV_CACHE
        CONV_CMD --> CONV_CACHE
    end
    
    subgraph "Workflow Service"
        WF_API[API Layer]
        WF_AUTHZ[Tenant Authorization Check]
        WF_QUERY[Query Handler]
